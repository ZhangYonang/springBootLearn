<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration   PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <!--数据库驱动
            targetRuntime:执行逆向工程的版本
                  MyBatis3Simple:生成基本的CRUD
                  MyBatis3:生成带条件的CRUD
     -->
    <context id="DB2Tables" targetRuntime="MyBatis3Simple">
        <!--数据库链接地址账号密码 -->
        <jdbcConnection
                driverClass="com.mysql.cj.jdbc.Driver"
                connectionURL="jdbc:mysql://www.ailixiya.xyz:3306/bootdata?serverTimezone=GMT"
                userId="bootData"
                password="zya20010922">
        </jdbcConnection>
        <!--生成 Model 类存放位置 -->
        <javaModelGenerator targetPackage="com.aili.springboot_mybatis.pojo"
                            targetProject=".\src\main\java">
        </javaModelGenerator>
        <!--生成映射文件存放位置 -->
        <sqlMapGenerator targetPackage="com.aili.springboot_mybatis.mapper"
                         targetProject=".\src\main\resources">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>
        <!--生成接口类存放位置(Dao|Mapper) -->
       <javaClientGenerator type="XMLMAPPER"
                             targetPackage="com.aili.springboot_mybatis.mapper"
                             targetProject=".\src\main\java">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>
        <!-- 参考数据库中需要生成的对应表信息 -->
        <table tableName="user" domainObjectName="user"></table>
    </context>
</generatorConfiguration>
